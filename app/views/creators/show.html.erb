<div class="row">

<h1><%=@creator.name %></h1>
<h2><%= @creator.roma %></h2>
<h2><%= @creator.agency %></h2>
<h2><%= Job.find_by(@creator.job_id).name %></h2>

<% @ads = Assign.where(:creator_id => @creator.id) %>


<% if @ads %>
	<% @ads.each do |ad| %>
		<%= render "shared/post_single", :post => Post.find(ad.post_id) %>
	<% end %>
<% end %>

</div>